class Student:
    def __init__(self, name, age, course):
        self.name = name
        self.age = age
        self.course = course

    def introduce(self):
        print(f"Hi, I'm {self.name}, {self.age} years old, studying {self.course}.")


student1 = Student("Alog", 20, "Computer Science")
student2 = Student("Bobby", 22, "Mechanical Engineering")
student3 = Student("Charlotte", 21, "Mathematics")

student1.introduce()
student2.introduce()
student3.introduce()
